generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @db.Uuid
  firstname String
  lastname  String
  email     String?  @unique
  password  String
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Task {
  id       String   @id @db.Uuid
  title    String
  content  String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  userId   String
}
